	lexing.h\
	lineno.h\
	list.h\
	position.h\
	pp.h\
	pwd.h\
	queue.h\
	rope.h\
	set.h\
	slowdict.h\
	splay.h\
	string.h\
	strings.h\
	sys/cioctl.h\
	sys/ioctl.h\
	xarray.h

CYCLONE_SRCS:=absyn\
         parse_tab\
         lex\
         absynpp\
	 absyndump\
	 rgnorder\
         tcenv\
         tcutil\
         tcstmt\
         tcpat\
