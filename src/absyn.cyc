tqual_t combine_tqual(tqual_t x,tqual_t y) { 
  return Tqual(x.print_const || y.print_const,
	       x.q_volatile || y.q_volatile,
	       x.q_restrict || y.q_restrict,
               x.real_const || y.real_const,
               segment_join(x.loc,y.loc));
}

