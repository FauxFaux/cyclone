// string
static type_t* string_t_opt = NULL;
type_t string_typ(type_t rgn) {
  if (rgn != HeapRgn)
    return starb_typ(char_typ,rgn,empty_tqual(NULL),DynEither_b,true_conref);
  if (string_t_opt == NULL) {
    type_t t = starb_typ(char_typ,HeapRgn,empty_tqual(NULL),
                         DynEither_b,true_conref);
    string_t_opt = new t;
  }
  return *string_t_opt;
}
static type_t* const_string_t_opt = NULL;
type_t const_string_typ(type_t rgn) {
  if (rgn != HeapRgn)
    return starb_typ(char_typ,rgn,const_tqual(NULL),DynEither_b,true_conref);
  if (const_string_t_opt == NULL) {
    type_t t = starb_typ(char_typ,HeapRgn,const_tqual(NULL),
                         DynEither_b,true_conref);
    const_string_t_opt = new t;
  }
  return *const_string_t_opt;
}
