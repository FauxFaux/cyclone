               .structdecls = Dict::empty(String::strcmp),
               .enumdecls   = Dict::empty(String::strcmp),
               .xenumdecls  = Dict::empty(String::strcmp),
               .typedefs    = Dict::empty(String::strcmp),
               .ordinaries  = Dict::empty(String::strcmp),
               .availables  = null};
}
