#define PRINT_STAGE(s) { if (*v) fprintf(cyc_stderr,s); else if (!*q) fprintf(cyc_stderr,"."); fflush(cyc_stderr); }

static bool pp_r       = false;
static bool up_r       = false;
static bool noexpand_r = false;
static bool noshake_r  = false;
static bool tc_r       = false;
static bool toc_r      = false;
static bool v_r        = false;
static bool q_r        = false;
static bool add_cyc_namespace_r = true;

bool @ pp       = &pp_r;
bool @ up       = &up_r;
bool @ noexpand = &noexpand_r;
bool @ noshake  = &noshake_r;
bool @ tc       = &tc_r;
bool @ toc      = &toc_r;
bool @ v        = &v_r;
bool @ q        = &q_r;
bool @ add_cyc_namespace = &add_cyc_namespace_r;

static string *out_file_name_opt = null;

static void set_check_null() {
  Toc::check_for_null = true;
}

static void set_out_file_name(string s) {
  out_file_name_opt = (string *)(&$(s));
}
static list<string> includes = null;
static void add_include(string s) {
  includes = &cons(s,includes);
}
static list<string> defines = null;
static void add_define(string s) {
  defines = &cons(s,defines);
}

bool compile_failure = false; // for exit code (helps Makefile)

void compile_file(string filename) {

  string basename = Filename::chop_extension(filename);

  if (!*q||*v) fprintf(cyc_stderr,"Compiling file: %s", basename);
  if (*v) fprintf(cyc_stderr,"\n");

  // establish filenames
  string preprocfile = strconcat(basename,  ".i");

  // Run the preprocessor, by building and running a command-line
  // Pass -I and -D things onto pre-processor
  string inc_string = String::str_sepstr(&cons((string)"",rev(includes))," -I");
  string def_string = String::str_sepstr(&cons((string)"",rev(defines)), " -D");
  string cmd = xprintf("gcc -x c -E -U__GNUC__ %s %s %s > %s",
                       inc_string, def_string, filename, preprocfile);
  if (*v) fprintf(cyc_stderr,"%s\n",cmd);
  system(string_to_Cstring(cmd));

  // reset front-end -- necessary for good error messages!
  Position::reset_position(preprocfile);

  // Actually process the file
  FILE @f;
  try f = file_open(preprocfile, "r");
  catch {
  default:
    fprintf(cyc_stderr, "couldn't open %s\n", preprocfile);
    compile_failure=true;
    return;
  }

  // parse
  list<Absyn::decl> tds = null;
  tds = Parse::parse_file(f);
  PRINT_STAGE("Parsing completed\n");
  fflush(cyc_stderr);
  // typecheck
  if (tds != null && *tc) try {
    Absynpp::expand_typedefs = ! *noexpand;
    Tcenv::tenv te = Tcenv::tc_init();
    Tc::tc(te, add_cyc_namespace_r, tds);
    if(! *noshake)
      tds = Tc::treeshake(te,tds);
    PRINT_STAGE("Type checking completed\n");
    ControlFlow::cf_check(tds);
    PRINT_STAGE("Control-flow checking completed\n");
  } catch {
  case Tcutil::TypeErr: 
    fprintf(cyc_stderr,"Type error!\n");
    compile_failure=true;
    break;
  case Dict::Absent:
    fprintf(cyc_stderr,"Dict::Absent occurred during type checking!\n");
    compile_failure=true;
    break;
  case Impossible(s):
    fprintf(cyc_stderr,"Impossible: %s\n", s);
    compile_failure=true;
    break;
  }
  // translate to C
  if (*toc && !compile_failure) {
    tds = Toc::toc(tds); 
    PRINT_STAGE("Translation to C completed\n");
  }
  // print
  FILE @out_file;
  try {
    if (out_file_name_opt == null)
      out_file = cyc_stdout;
    else 
      out_file = file_open(*out_file_name_opt, "w");
  } catch {
  case FileOpenError(_): 
    fprintf(cyc_stderr,"could not open output file: %s\n",*out_file_name_opt);
    fflush(cyc_stderr);
    compile_failure=true;
    return;
  }
  if (tds != null && !compile_failure && (*pp || *up)) {
    Absynpp::expand_typedefs = ! *noexpand;
    if (*toc) {
      fprintf(out_file, "#include \"cyc_include.h\"\n\n");
      Absynpp::qvar_to_Cids = true;
    }
    if(*pp)
      Absynpp::decllist2file(tds,out_file);
    else if(*up)
      Absyndump::dumpdecllist2file(tds,out_file);
    fflush(out_file);
    PRINT_STAGE("Printing completed\n");
    if (!(*v || *q)) fprintf(cyc_stderr,"\n"); // for "...." progress indicator
  }
  if (Position::error_p()) {
    fprintf(cyc_stderr,"COMPILATION FAILED!\n");
    fflush(cyc_stderr);
    compile_failure=true;
  } else {
    Tcutil::flush_warnings();
  }
  file_close(f);
  file_delete(preprocfile);
  if (out_file_name_opt != null) file_close(out_file);
  return;
}

int main() {

  list<$(string,Arg::spec,string)@> options =
    &cons(&$((string)"-o",String_spec(set_out_file_name),
             (string)"output file name"),
    &cons(&$((string)"-pp",Set_spec(pp), 
             (string)"pretty print"),
    &cons(&$((string)"-up",Set_spec(up), 
             (string)"ugly print"),
    &cons(&$((string)"-noexpandtypedefs",Set_spec(noexpand),
             (string)"don't expand typedefs in pretty printing"),
    &cons(&$((string)"-noremoveunused",Set_spec(noshake),
             (string)"don't remove externed variables that aren't used"),
    &cons(&$((string)"-tc",Set_spec(tc), 
             (string)"type check"),
    &cons(&$((string)"-toc",Set_spec(toc), 
             (string)"translate to C"),
    &cons(&$((string)"-I",String_spec(add_include), 
             (string)"include directory"),
    &cons(&$((string)"-D",String_spec(add_define), 
             (string)"pass definition to pre-processor"),
    &cons(&$((string)"-check_null",Unit_spec(set_check_null), 
             (string)"turn on null-checking in generated C code"),
    &cons(&$((string)"-v",Set_spec(v), 
             (string)"print compilation stages verbosely"),
    &cons(&$((string)"-q",Set_spec(q), 
             (string)"compile quietly"),
    &cons(&$((string)"-nocyc",Clear_spec(add_cyc_namespace), 
	     (string)"does not add implicit namespace Cyc"),
          null)))))))))))));

  Lex::lex_init();
  Arg::parse(options, compile_file, "Options:");

  return compile_failure ? 1 : 0;
}

