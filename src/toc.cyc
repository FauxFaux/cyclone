    e->r = stmt_exp(s,DL)->r;
    break;
  case Struct_e(tdn,ots,dles,sd):
    // Due to a GCC bug w.r.t. to nested designators, we expand this out
    // to ({ t temp; t.f1 = e1, ..., t.fn = en; t}).
    if(!nv->toplevel)
      e->r = init_struct(nv,old_typ,false,dles,tdn)->r;
    else {
