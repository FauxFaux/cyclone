	// ({ struct tagged_ptr temp = e1;
	//    temp.curr += e2; temp; })
	exp_t e1 = es->hd;
	exp_t e2 = es->tl->hd;
	let temp = temp_var();
	let temp_typ = typ_to_c(old_typ);
	let s = exp_stmt(var_exp(temp,DL),DL);
	let e3 = structmember_exp(var_exp(temp,DL),curr_sp,DL);
	let e4 = assignop_exp(e3,new Opt(Plus),e2,DL);
