      let n = tdn;
      structdecl sd2 = 
	(structdecl)((sd == null) ? toc_impos(xprintf("no structdecl %s",qvar2string(tdn))) : sd);
      let fields = Tcutil::resolve_struct_designators(e->loc, dles, 
						    (structdecl)sd2);
      for (; fields != null; fields = fields->tl) {
	let &$(&$(_,_,fieldtyp),fieldexp) = fields->hd;
