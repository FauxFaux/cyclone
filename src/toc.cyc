      case Unknown_b:
	// ({ tagged_ptr x = e1;
	//    t2 *a = x.curr;
        //    if (a < x.base || a >= x.last_plus_one) throw(ArrayIndex);
        //    *a; })
	qvar x = temp_var();
	qvar a = temp_var();
	let ta1 = typ_to_c_array(t2);
	let n   = add_tagged_ptr_type(ta1,tq);
	typ tx  = strct(n);
	typ ta2 = cstar_typ(ta1,tq);
	exp test_exp = 
	  or_exp(lt_exp(var_exp(a,DL),
			structmember_exp(var_exp(x,DL),base_sp,DL),DL),
		 gte_exp(var_exp(a,DL),
			 structmember_exp(var_exp(x,DL),last_plus_one_sp,DL),
			 DL),DL);
	exp a_init = structmember_exp(var_exp(x,DL),curr_sp,DL);
	// FIX:  should throw array out of bounds exception
	stmt s5 = exp_stmt(deref_exp(var_exp(a,DL),DL),DL);
	stmt s4 = exp_stmt(newthrow_exp(null_pointer_exn_exp(DL)),DL);
	stmt s3 = ifthenelse_stmt(test_exp,s4,skip_stmt(DL),DL);
	stmt s2 = seq_stmt(s3,s5,DL);
	stmt s1 = declare_stmt(a,ta2,a_init,s2,DL);
	e->r = stmt_exp(declare_stmt(x,tx,e1,s1,DL),DL)->r;
        break;
      case Upper_b(e):
	bool nullable = is_nullable(e1->topt->v);
	if (nullable) {
	  // ({t x=e1; if (x == null) throw(NullPointer); *x;})
	  qvar x  = temp_var();
	  typ  tx = typ_to_c(e1->topt->v);
	  exp  e2 = eq_exp(var_exp(x,DL),signed_int_exp(0,DL),DL);
	  exp  e3 = newthrow_exp(null_pointer_exn_exp(DL));
	  stmt s1 = ifthenelse_stmt(e2,exp_stmt(e3,DL),skip_stmt(DL),DL);
	  stmt s2 = exp_stmt(deref_exp(var_exp(x,DL),DL),DL);
	  stmt s3 = seq_stmt(s1,s2,DL);
	  e->r = stmt_exp(declare_stmt(x,tx,e1,s3,DL),DL)->r;
	}
	break;
      }
      break;
    default: toc_impos("exp_to_c: Deref: non-pointer"); break;
    }
    break;
  case StructMember_e(e1,f):
    exp_to_c(nv, e1);
    if(is_poly_project(e))
      e->r = array_to_ptr_cast(typ_to_c(e->topt->v),new_exp(e->r,DL),DL)->r;
    break;
  case StructArrow_e(e1,f):
    exp_to_c(nv, e1);
    if (is_nullable(e1->topt->v)) {
      // {(t x=e1; if (x == null) throw(NullPointer); x->f;)}
      qvar x  = temp_var();
      typ  tx = typ_to_c(e1->topt->v);
      exp  e2 = eq_exp(var_exp(x,DL),signed_int_exp(0,DL),DL);
      exp  e3 = newthrow_exp(null_pointer_exn_exp(DL));
      stmt s1 = ifthenelse_stmt(e2,exp_stmt(e3,DL),skip_stmt(DL),DL);
      stmt s2 = exp_stmt(structarrow_exp(var_exp(x,DL),f,DL),DL);
      stmt s3 = seq_stmt(s1,s2,DL);
      e->r = stmt_exp(declare_stmt(x,tx,e1,s3,DL),DL)->r;
    } else if(is_poly_project(e)) {
      e->r = array_to_ptr_cast(typ_to_c(e->topt->v),new_exp(e->r,DL),DL)->r;
    }
    break;
  case Subscript_e(e1,e2):
    let e1_typ = compress(e1->topt->v);
    exp_to_c(nv, e1);
    exp_to_c(nv, e2);
    // cast e1 to have the right type so that we can do the projection
    // note:  casts to array types t[] or t[3] should be casts to pointer
    // types *t
    e1->r = array_to_ptr(typ_to_c(e1_typ),new_exp(e1->r,DL),DL)->r;
    // e1 could be a tuple, pointer to tuple, or an array of various sorts
    switch (e1_typ) {
    case TupleType(ts):
      // e1->fi  where i = e2+1
      unsigned int i = Evexp::eval_const_uint_exp(e2)+1;
      e->r = structmember_exp(e1,new {xprintf("f%d",i)},DL)->r;
      break;
