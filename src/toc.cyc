// return true if t is a nullable pointer type i.e., *
static bool is_nullable(typ t) {
  if (!check_for_null) return false;
  switch (compress(t)) {
  case PointerType(PtrInfo{_,_,b,_,_}):
    switch (compress_conref(b)->v) {
    case Eq_constr(b2): return b2;
    default:            return false;
    }
  default: toc_impos("is_nullable"); return false;
  }
}
static bool really_is_nullable(typ t) {
  bool b = check_for_null;
  check_for_null = true;
  bool ans = is_nullable(t);
  check_for_null = b;
  return ans;
}

static qvar collapse_qvar_tag(qvar x,string tag) {
  return &$((*x)[0], new {String::strconcat(*((*x)[1]),tag)});
}

// various struct definitions generated by occurrences of tuple and
// tagged pointer types.  These are kept in reverse order of their
// occurrence.
static list_t<decl> added_decls = null;

static void add_tuple_decl(var x, list_t<typ> ts) {
  let fs = null;
  for (int i=1; ts != null; ts = ts->tl, i++)
    fs = &List(&$(new {xprintf("f%d",i)},empty_tqual(),ts->hd),fs);
  fs = List::imp_rev(fs);
  let sd = &Structdecl{.sc = Public, .name = &Opt(&$(Abs_n(null),x)),
                       .tvs = null, .fields = &Opt(fs)};
  added_decls = &List(new_decl(Struct_d(sd),DL),added_decls);
}

static void add_tagged_ptr_decl(var x, typ t) {
  typ tptr = star_typ(t,HeapRgn,empty_tqual());
  let f1 = &$(curr_sp,empty_tqual(),tptr);
  let f2 = &$(base_sp,empty_tqual(),tptr);
  let f3 = &$(last_plus_one_sp,empty_tqual(),tptr);
  let fs = &List(f1,&List(f2,&List(f3,null)));
  let sd = &Structdecl{.sc = Public,
                       .name = &Opt(&$(Abs_n(null),x)),
                       .tvs = null,
                       .fields = &Opt((list_t<$(stringptr,tqual,typ)@>)fs)};
  added_decls = &List(new_decl(Struct_d(sd),DL),added_decls);
}

// used to generate struct definitions for tuple types
// we share the struct definitions where possible.  
// FIX: should use an efficient map data structure.
static list_t<$(var,list_t<typ>)@> tuple_types = null;
static int tuple_type_counter = 0;
static var add_tuple_type(list_t<$(tqual,typ)@> tqs0) {
  for (let tts = tuple_types; tts != null; tts = tts->tl) {
    let &$(x,ts) = tts->hd;
    bool okay = true;
    let  tqs  = tqs0;
    for (; tqs != null && ts != null; tqs = tqs->tl, ts = ts->tl)
      if (!unify((*tqs->hd)[1],ts->hd)) {
	okay = false;
	break;
      }
    if (!okay || tqs != null || ts != null)
      continue;
    return x;
  }
  stringptr x = new {xprintf("_tuple%d",tuple_type_counter++)};
  list_t<typ> ts = List::map(snd,tqs0);
  add_tuple_decl(x,ts);
  tuple_types = &List(&$(x,ts),tuple_types);
  return x;
}

// used to generate struct definitions for tagged pointer types (e.g., t?)
// we share the struct definitions where possible.
// FIX should use an efficient map data structure.
static list_t<$(var,typ)@> tagged_ptr_types = null;
static int tagged_ptr_counter = 0;
static var add_tagged_ptr_type(typ t,tqual tq) {
  // Handle char[?] specially, its C implementation is in cyc_include.h
  switch (t) {
  case IntType(Unsigned,B1): return _tagged_string_sp;
  default: break; //skip
  }
  for(_ tts = tagged_ptr_types; tts != null; tts = tts->tl) {
    let &$(x,t2) = tts->hd;
    if (!unify(t,t2)) continue;
    return x;
  }
  stringptr x = new {xprintf("_tagged_ptr%d",tagged_ptr_counter++)};
  add_tagged_ptr_decl(x,t);
  tagged_ptr_types = &List(&$(x,t),tagged_ptr_types);
  return x;
}

