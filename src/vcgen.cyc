////////// Updating an Assertion //////////////////
static term_t fresh_nonescvar(env_t env, vardecl_t vd);

// FIX:
static assn_t kill_var(env_t env, vardecl_t vd, assn_t a) {
  let v2 = fresh_nonescvar(env,vd);
  a = subst(vd,v2,a);
  return a;
}

// We are executing tgt := src
static assn_t do_assign(env_t env, assn_t a, term_opt_t tgt, term_opt_t src) {
  switch (tgt) {
  case &Var(vd):
    // This is a non-escaping variable so we just substitute a fresh
    // logic variable for it.  That is, we return
    // a[v2/vd] && vd == src[v2/vd]
    let v2 = fresh_nonescvar(env,vd);
    a = subst(vd,v2,a);
    src = (src == NULL) ? NULL : subst_term(src,vd,v2);
    return and(a,eq(tgt,src));
  default:
    // We have some address that we're updating but not sure what it is.
    // So we substitute a fresh logic variable m for memory and add in
    // that memory = upd(m,tgt,src).  That is, we return
    // a[m/memory] && memory = upd(m,tgt[m/memory],src[m/memory]).
    let m = fresh_nonescvar(env,memory);
    a = subst(memory,m,a);
    term_opt_t upd = NULL;
    if (src != NULL && tgt != NULL)
      upd = update(m,subst_term(tgt,memory,m),subst_term(src,memory,m));
    return and(a,eq(var(memory),upd));
  }
}

