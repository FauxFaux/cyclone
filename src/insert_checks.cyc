@extensible datatype Absyn::AbsynAnnot {
  NoCheck;
  NullOnly;
  NullAndFatBound;
  FatBound;
  NullAndThinBound(exp_t); // exp must be a C constant expression
  ThinBound(exp_t);        // exp must be a C constant expression
};
datacon(Absyn::AbsynAnnot,NoCheck);
