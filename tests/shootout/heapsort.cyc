// Invoke with an integer command-line arg.

// NOTE: the program will throw Null_exception because of an
// out-of-bounds if invoked with no argument or argument=1.
// This is better than the C version, which dumps core.

#include <stdio.h>
#include <stdlib.h>
//#include <math.h>
//using Math;
using Stdio;
using Stdlib;

#define IM 139968
#define IA   3877
#define IC  29573

double
gen_random(double max) {
    static long last = 42;
    return( max * (last = (last * IA + IC) % IM) / IM );
}

void
heapsort(int n, double ?`r ra) {
    int i, j;
    int ir = n;
    int l = (n >> 1) + 1;
    double rra;

    for (;;) {
	if (l > 1) {
	    rra = ra[--l];
	} else {
	    rra = ra[ir];
	    ra[ir] = ra[1];
	    if (--ir == 1) {
		ra[1] = rra;
		return;
	    }
	}
	i = l;
	j = l << 1;
	while (j <= ir) {
	    if (j < ir && ra[j] < ra[j+1]) { ++j; }
	    if (rra < ra[j]) {
		ra[i] = ra[j];
		j += (i = j);
	    } else {
		j = ir + 1;
	    }
	}
	ra[i] = rra;
    }
}

int
main(int argc, char ??argv) {
    int N = ((argc == 2) ? atoi(argv[1]) : 1);
    double ?ary = new {for i < N+1 : gen_random(1)};

    heapsort(N, ary);

    printf("%.10g\n", ary[N]);

    return(0);
}

