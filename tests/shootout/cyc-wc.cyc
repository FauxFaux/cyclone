#include <stdio.h>
#include <unistd.h>
#include <assert.h>
#include "timer.h"

#define CHAR int
#define BSIZ 4096

unsigned long ws[256];
char buff[BSIZ+1]ZEROTERM;

int main() {

    int w_cnt=0,l_cnt=0,b_cnt=0,cnt;
    unsigned long was_sp = 1;
    unsigned char ?pp, ?pe;
    START_TIME
    /* Fill tables */
    for (cnt = 0; cnt < 256; cnt++) ws[cnt] = 0;

    /* also: ws['\r']=ws['\v']=ws['\f']= */
    ws[' ']=ws['\t']=ws['\n']=1;
    ws['\n']=65536 + 1;

    /* Main loop */
    while((cnt=read(0,buff,BSIZ))) {
        unsigned long tcnt = 0;

	b_cnt += cnt;
        char ?NOZEROTERM mybuf = (char ?NOZEROTERM)buff;
        assert(cnt <= numelts(mybuf));
        for (unsigned pp=0; pp < cnt; pp++) {
            long x = ws[mybuf[pp]];
	    tcnt += x ^ was_sp;
	    was_sp = x & 0xFFFF;
	}
	w_cnt += tcnt  & 0xFFFF;
	l_cnt += tcnt >> 16;
    }

    w_cnt += (ws[ buff[b_cnt&(BSIZ-1)-1] ]^1)&1;
    w_cnt>>=1;

    printf("%d %d %d\n", l_cnt, w_cnt, b_cnt);
    END_TIME
    return 0;
}
