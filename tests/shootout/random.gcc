#include <math.h>
#include <stdio.h>
#include <stdlib.h>
#include "timer.h"

#define IM 139968
#define IA 3877
#define IC 29573

inline double gen_random(double max) {
    static long last = 42;
    
    last = (last * IA + IC) % IM;
    return( max * last / IM );
}

int main(int argc, char *argv[]) {
    int N = ((argc == 2) ? atoi(argv[1]) : 1);
    double result = 0;
    START_TIME    
    while (N--) {
	result = gen_random(100.0);
    }
    printf("%.9f\n", result);
    END_TIME
    return(0);
}
