#include <core.h>
#include <ccrypt.h>
using Core;

namespace Ccrypt {
  extern "C" {
    Cstring crypt(const Cstring key, const Cstring salt);
  }
#define s2c(x) (string_to_Cstring(x))
}

namespace Std;

char ?crypt(const char ?key, const char ?salt) {
  return Ccrypt::crypt(s2c(key), s2c(salt));
}
